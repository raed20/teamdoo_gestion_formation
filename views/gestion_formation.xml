                    </form>
                </field>
        </record>
        <record id="view_candidat_tree" model="ir.ui.view">
                <field name="name">gest.candidat.tree</field>
                <field name="model">gest.candidat</field>
                <field name="priority" eval="8" />
                <field name="arch" type="xml">
                    <tree string="candidats">
