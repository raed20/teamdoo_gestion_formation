        </record>
        <record id="candidat_kanban" model="ir.ui.view">
                <field name="name">candidat.kanban</field>
                <field name="model">gest.candidat</field>
                <field name="arch" type="xml">
                    <kanban>
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_resource_details">
                                    <ul>
                                        <li>
                                            <field name="id"/>
                                        </li>
                                        <li>
                                            <field name="name"/>
                                        </li>
                                        <li>
                                            <field name="email"/>
                                        </li>
                                    </ul>
                                </div>
